@page "{handler?}"
@model IndexModel
@{
    ViewData["Title"] = "Home page";

    if (Request.Path.Value == "/Unsanitized")
    {
        <script type="text/javascript">
            window.onload = function () {
                alert("Du skal spritte dine hænder før du bruger min kaffemaskine >:/");
            };
        </script>
    }
}


<div class="text-center">
    <h1>Min Kaffemaskine</h1>

    <div>
        <form asp-page-handler="Sprit" method="post">
            <button class="btn btn-primary p-3">Sprit Dine Hænder</button>
        </form>
    </div>

    <div>
        <img style="margin-left: auto;margin-right: auto;display: block; width: 70%;" src="~/images/kaffemaskine.png" />
        <form asp-page-handler="Kaffe" method="post">
            <button class="btn btn-warning">KaffeKnap</button>
        </form>

        @foreach (var coffee in Model.Coffees)
        {
            <form asp-page-handler="id" method="post">
                <button class="btn btn-warning">@coffee.CoffeeName</button>
                <input type="hidden" name="id" value="@coffee.ToString()" />
            </form>
        }
    </div>
</div>
