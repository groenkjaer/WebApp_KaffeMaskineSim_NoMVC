@page
@model WebApp_KaffeMaskineSim_NoMVC.Pages.CoffeeExtraModel
@{
    ViewData["Title"] = "CoffeeExtra";
}
<h1>Du har valgt en</h1>
<h3>
    @Model.Coffee.Temperature 
    @Model.Coffee.CoffeeName
    @{ 
        if (!Model.Coffee.Alcoholic != true)
        {
            @:med alkohol,
        }
        else 
        { 
            @:uden alkohol,
        }
        @:den smager af @Model.Coffee.Season
    }
</h3>

<form action="/" method="post">
    <label><input class="mr-2" type="checkbox" asp-for="Coffee.Sugar" value="Sugar" />Sugar</label>
    <br />
    <label><input class="mr-2" type="checkbox" asp-for="Coffee.Milk" value="Milk" />Milk</label>
    <br />
    <label><input class="mr-2" type="checkbox" asp-for="Coffee.Cream" value="Creme" />Creme</label>
    <br />
    <label><input class="mr-2" type="checkbox" asp-for="Coffee.Syrup" value="Syrup" />Syrup</label>
</form>
<form asp-page-handler="Pay" action="/" method="post">
    <Button class="btn btn-success">Gå til betaling</Button>
</form>
<form asp-page-handler="Cancel" action="/" method="post">
    <Button class="btn btn-warning">Fortryd Køb</Button>
</form>